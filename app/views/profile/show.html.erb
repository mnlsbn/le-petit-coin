<div class='container-profile'>
  <div class="row row-one-profile">

    <div class="col-xs-2 col1">
      <%= image_tag ('http://www.konbini.com/wp-content/blogs.dir/3/files/2015/05/dikkenek-2006-12-g-1-810x461.jpg'), class: 'img-profile' %>
    </div>

    <div class="col-xs-6 col2">
        <fieldset>
            <legend>My profile:</legend>
              <% if @profile %>
                <% if @profile.photo? %>
#                  <%= cl_image_tag @profile.photo.path, width: 200, height: 300, crop: :fill, class: 'thumbnail' %>
                <% end %>
                <ul class="list-unstyled">
                  <li><strong>First-name : </strong><%= @profile.first_name %></li>
                  <li><strong>Last-name : </strong><%= @profile.last_name %></li>
                  <li><strong>Phone-number : </strong><%= @profile.phone_number %></li>
                  <li><strong>Email : </strong><%= current_user.email %></li>
                </ul>
              <% else %>
                <%= link_to "Please create your profile", new_profile_path, class: "btn btn-primary"  %>
              <% end %>
        </fieldset>
    </div>

    <div class="col-xs-4 col3">
      <fieldset>
        <legend>My Wcs :</legend>
        <ul class="list-unstyled">
          <% if @profile %>
            <% @profile.user.wcs.all.each do |wc| %>
              <li>
                <%= cli_image_tag (wc.photo), class: 'sticker-small' %>
                <strong><%= wc.name %></strong>
                <span class="label label-success">Available</span>
              </li>
            <% end %>
          <% else %>
            <p> You don't have any Wc. Click to add one. </p>
          <% end %>
          <%= link_to "Add new", new_profile_wc_path, class: "fa fa-plus-circle"  aria-hidden: "true" %>
        </ul>
      </fieldset>
    </div>

  </div>

  <div class="row">
    <div class="col-xs-12">
      <fieldset>
        <legend>My Bookings :</legend>
        <%= %>
      </fieldset>
    </div>
  </div>

</div>

