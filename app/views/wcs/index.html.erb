<div class='container'>
  <div class='col-xs-12 col-md-6'>
    <h2> Do what you need to do ! </h2>

    <% @wcs.each do |wc| %>
    <div class='card'>
      <ul class="list-unstyled">
        <li><h4><strong><%= link_to wc.name , wc_path(wc) %></strong></h4></li>
        <li><strong>Description : </strong><%= wc.description %></li>
        <li><strong>Address : </strong><%= wc.address %></li>
        <li><strong>Availability : </strong><%= wc.availability %></li>
      </ul>
    </div>
    <% end %>
  </div>

  <div class='col-xs-12 col-md-6'>
    <!-- your div to put the map -->
  </div>
</div>
